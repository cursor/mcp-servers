{
  "name": "Heroku",
  "description": "Manage Heroku apps and resources.",
  "transport": [
    "stdio"
  ],
  "icon": "./icon.svg",
  "domains": ["heroku.com"],
  "oauth": false,
  "config": {
    "command": "npx",
    "args": [
      "-y",
      "@heroku/mcp-server"
    ],
    "env": {
      "HEROKU_API_KEY": ""
    }
  }
}